import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);
    System.out.println("Enter a number: ");
    int expectedLines = scanner.nextInt();
  
    //    __   2
    //   ____  4
    //  ______ 6
    
    // viimase rea pikkus = expectedLines * 2

    int rowLength = expectedLines * 2;
    int spaces = rowLength - 2;
    int spacesOnSingleSide = spaces / 2;
    int underscoreCount = 2;
    String emptyRow = "";

  for(int j = 1; j <= expectedLines; j++){
    emptyRow = "";
    for(int i = 1; i <= rowLength; i++){
      if(i <= spacesOnSingleSide){
        emptyRow = emptyRow + " ";
      }
      if(i > spacesOnSingleSide && i <= (spacesOnSingleSide + underscoreCount)){
        emptyRow = emptyRow + "_";
      }

    }
    System.out.println(emptyRow);
    underscoreCount = underscoreCount + 2;
    spacesOnSingleSide = spacesOnSingleSide - 1;
  }
    
    scanner.close();
  
  }
}
